# 数据库配置
database:
  # SQLite: sqlite:///./stock_data.db
  # MySQL: mysql+pymysql://user:password@localhost:3306/stock_db
  # PostgreSQL: postgresql://user:password@localhost:5432/stock_db
  url: "sqlite:///./stock_data.db"

# 大模型配置
llm:
  # OpenAI API
  provider: "openai"  # openai, anthropic, ollama
  api_key: "your-api-key-here"
  base_url: "https://api.openai.com/v1"  # 可选，用于自定义API端点
  model: "gpt-4-turbo-preview"

  # Anthropic API
  # provider: "anthropic"
  # api_key: "your-anthropic-key"
  # model: "claude-3-opus-20240229"

  # Ollama (本地)
  # provider: "ollama"
  # base_url: "http://localhost:11434"
  # model: "llama2"

# 数据更新配置
update_schedule:
  # 工作日每天更新时间（24小时制）
  daily_update_time: "16:00"  # 收盘后更新
  # 是否启用自动更新
  auto_update: true
  # 首次启动是否立即更新
  update_on_start: false

# API 服务配置
api:
  host: "0.0.0.0"
  port: 8000
  reload: false

# Web 服务配置
web:
  title: "A股数据分析助手"
  port: 8501
