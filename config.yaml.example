# 数据库配置
database:
  # SQLite: sqlite:///./stock_data.db
  # MySQL: mysql+pymysql://user:password@localhost:3306/stock_db
  # PostgreSQL: postgresql://user:password@localhost:5432/stock_db
  url: "sqlite:///./stock_data.db"

# Tushare配置
tushare:
  # Tushare API Token (从 https://tushare.pro/user/token 获取)
  token: "your-tushare-token-here"

# 大模型配置
llm:
  # OpenAI API
  provider: "openai"  # openai, anthropic, ollama
  api_key: "your-api-key-here"
  base_url: "https://api.openai.com/v1"  # 可选，用于自定义API端点
  model: "gpt-4-turbo-preview"

  # Anthropic API
  # provider: "anthropic"
  # api_key: "your-anthropic-key"
  # model: "claude-3-opus-20240229"

  # Ollama (本地)
  # provider: "ollama"
  # base_url: "http://localhost:11434"
  # model: "llama2"

# 数据更新配置
update_schedule:
  # 每天自动更新时间（24小时制）- 修改为早上7点
  daily_update_time: "07:00"  # 每天早上7点更新自选股票历史数据
  # 是否启用自动更新
  auto_update: true
  # 首次启动是否立即更新
  update_on_start: false

# JWT认证配置
jwt:
  # JWT密钥（请修改为随机字符串）
  secret_key: "your-secret-key-change-this-in-production"
  # Token过期时间（分钟）
  access_token_expire_minutes: 1440  # 24小时

# API 服务配置
api:
  host: "0.0.0.0"
  port: 8000
  reload: false

# Web 服务配置
web:
  title: "A股数据分析助手"
  port: 8501
